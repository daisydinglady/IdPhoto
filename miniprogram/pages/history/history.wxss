/* pages/history/history.wxss */
.header {
  padding: 60rpx 0 40rpx;
  text-align: center;
}

/* 历史列表 */
.history-list {
  margin-bottom: 40rpx;
}

.history-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.history-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.1);
}

.history-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.preview-image {
  width: 100%;
  height: 100%;
}

.history-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.history-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 8rpx;
}

.history-time {
  font-size: 24rpx;
  color: #8B94A6;
  margin-bottom: 12rpx;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  display: inline-block;
  padding: 6rpx 12rpx;
  background: linear-gradient(135deg, #F0F4FF 0%, #E0E9FF 100%);
  color: #667eea;
  font-size: 20rpx;
  font-weight: 600;
  border-radius: 8rpx;
  border: 1rpx solid #C7D2FE;
}

.history-actions {
  flex-shrink: 0;
  margin-left: 16rpx;
  padding: 12rpx;
}

.delete-icon {
  font-size: 40rpx;
  opacity: 0.5;
  transition: opacity 0.3s;
}

.history-actions:active .delete-icon {
  opacity: 1;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #8B94A6;
  margin-bottom: 40rpx;
  text-align: center;
}

.empty-btn {
  width: 280rpx;
  height: 88rpx;
  line-height: 88rpx;
}

/* 清空按钮 */
.clear-section {
  margin: 40rpx 0 32rpx;
}

.clear-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
}
