/* pages/profile/about/about.wxss */
.header-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: 40rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.logo-icon {
  font-size: 64rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: 800;
  color: #fff;
  margin-bottom: 12rpx;
}

.app-version {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.info-section,
.features-section,
.tech-section {
  margin-bottom: 24rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 20rpx;
}

.info-text {
  display: block;
  font-size: 26rpx;
  color: #4A5568;
  line-height: 1.8;
}

.feature-list {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.feature-item {
  font-size: 24rpx;
  color: #4A5568;
  background: linear-gradient(135deg, #F0F4FF 0%, #E0E9FF 100%);
  padding: 16rpx;
  border-radius: 12rpx;
  text-align: center;
  border: 1rpx solid #C7D2FE;
}
