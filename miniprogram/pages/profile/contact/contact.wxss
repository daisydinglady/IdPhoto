/* pages/profile/contact/contact.wxss */
.header {
  padding: 40rpx 0;
  text-align: center;
}

.contact-list {
  padding-bottom: 40rpx;
}

.contact-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.08);
}

.contact-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.contact-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.contact-label {
  font-size: 24rpx;
  color: #8B94A6;
}

.contact-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #2D3748;
}

.tips {
  text-align: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #F0F9FF 0%, #E0F2FE 100%);
  border: 2rpx solid #BAE6FD;
  border-radius: 24rpx;
}

.tips-text {
  display: block;
  font-size: 26rpx;
  color: #0C4A6E;
  line-height: 1.8;
}
