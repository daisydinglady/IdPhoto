/* pages/profile/guide/guide.wxss */
.header {
  padding: 60rpx 0 40rpx;
  text-align: center;
}

.guide-list {
  padding-bottom: 40rpx;
}

.guide-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.08);
}

.guide-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.guide-icon {
  font-size: 48rpx;
}

.guide-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
}

.guide-tips {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.tip-dot {
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  color: #4A5568;
  line-height: 1.6;
}
