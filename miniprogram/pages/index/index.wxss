/* pages/index/index.wxss */
.header {
  padding: 60rpx 0 40rpx;
  text-align: center;
  position: relative;
}

.header-badge {
  display: inline-flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea20 0%, #764ba220 100%);
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  margin-bottom: 24rpx;
}

.badge-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.badge-text {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 600;
}

.title {
  display: block;
  font-size: 64rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 16rpx;
  letter-spacing: 4rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #8B94A6;
  font-weight: 400;
}

/* 分类标签 - 现代设计 */
.tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 40rpx;
}

.tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.tab::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.tab.active::before {
  opacity: 1;
}

.tab-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
  position: relative;
  z-index: 1;
  transition: transform 0.3s;
}

.tab.active .tab-icon {
  transform: scale(1.1);
}

.tab-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #8B94A6;
  position: relative;
  z-index: 1;
  transition: color 0.3s;
}

.tab.active .tab-text {
  color: #fff;
}

.tab:active {
  transform: scale(0.95);
}

/* 证件照列表 - 卡片设计 */
.photo-list {
  margin-bottom: 40rpx;
}

.photo-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.photo-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
  transform: scaleY(0);
  transition: transform 0.3s;
}

.photo-card:active::before {
  transform: scaleY(1);
}

.photo-card:active {
  transform: translateX(8rpx);
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.15);
}

.photo-icon {
  flex-shrink: 0;
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
  position: relative;
}

.photo-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.2);
  position: relative;
  overflow: hidden;
}

.photo-placeholder::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent 30%,
    rgba(255, 255, 255, 0.3) 50%,
    transparent 70%
  );
  animation: shimmer 3s infinite;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%) translateY(-100%) rotate(45deg);
  }
  100% {
    transform: translateX(100%) translateY(100%) rotate(45deg);
  }
}

.photo-dims {
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
  position: relative;
  z-index: 1;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.photo-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.photo-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.photo-desc {
  font-size: 24rpx;
  color: #8B94A6;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.photo-usage {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.usage-tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #F0F4FF 0%, #E0E9FF 100%);
  color: #667eea;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: 1rpx solid #E0E9FF;
}

.photo-arrow {
  flex-shrink: 0;
  margin-left: 16rpx;
}

.arrow-circle {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.photo-card:active .arrow-circle {
  transform: scale(1.1);
  box-shadow: 0 6rpx 16rpx rgba(102, 126, 234, 0.4);
}

.arrow-icon {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  margin-left: 4rpx;
}

/* 底部说明 */
.footer {
  text-align: center;
  padding: 60rpx 0 40rpx;
}

.footer-badges {
  display: flex;
  justify-content: center;
  gap: 32rpx;
  flex-wrap: wrap;
}

.footer-badge {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.badge-emoji {
  font-size: 48rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
}

.badge-label {
  font-size: 24rpx;
  color: #8B94A6;
  font-weight: 600;
}

/* 分类渐变 */
.bg-gradient-common {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.bg-gradient-exam {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.bg-gradient-visa {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}
