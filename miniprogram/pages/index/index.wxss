/* pages/index/index.wxss */
.header {
  padding: 40rpx 0;
  text-align: center;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
}

/* 分类标签 */
.tabs {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 30rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab.active {
  background: #4A90E2;
  color: #fff;
  font-weight: bold;
}

/* 证件照列表 */
.photo-list {
  margin-bottom: 40rpx;
}

.photo-card {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.photo-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.photo-icon {
  flex-shrink: 0;
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
}

.photo-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.photo-text {
  font-size: 20rpx;
  color: #fff;
  font-weight: bold;
}

.photo-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.photo-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.photo-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.photo-usage {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.usage-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: #E6F3FF;
  color: #4A90E2;
  font-size: 20rpx;
  border-radius: 8rpx;
}

.photo-arrow {
  flex-shrink: 0;
  margin-left: 16rpx;
}

.arrow {
  font-size: 60rpx;
  color: #E0E0E0;
  font-weight: 300;
}

/* 底部说明 */
.footer {
  text-align: center;
  padding: 40rpx 0;
}

.footer-text {
  font-size: 24rpx;
  color: #CCC;
}
