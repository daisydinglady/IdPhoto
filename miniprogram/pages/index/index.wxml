<!--pages/index/index.wxml-->
<view class="container">
  <!-- 头部 - 渐变设计 -->
  <view class="header">
    <view class="header-badge">
      <text class="badge-icon">✨</text>
      <text class="badge-text">AI 智能制作</text>
    </view>
    <text class="title">证件照制作</text>
    <text class="subtitle">一键生成专业证件照</text>
  </view>

  <!-- 分类标签 - 现代设计 -->
  <view class="tabs">
    <view
      class="tab {{currentTab === 'common' ? 'active' : ''}}"
      data-tab="common"
      bindtap="switchTab"
    >
      <text class="tab-icon">📐</text>
      <text class="tab-text">常用尺寸</text>
    </view>
    <view
      class="tab {{currentTab === 'exam' ? 'active' : ''}}"
      data-tab="exam"
      bindtap="switchTab"
    >
      <text class="tab-icon">📝</text>
      <text class="tab-text">考试报名</text>
    </view>
    <view
      class="tab {{currentTab === 'visa' ? 'active' : ''}}"
      data-tab="visa"
      bindtap="switchTab"
    >
      <text class="tab-icon">✈️</text>
      <text class="tab-text">签证护照</text>
    </view>
  </view>

  <!-- 证件照列表 - 卡片设计 -->
  <view class="photo-list">
    <block wx:for="{{currentList}}" wx:key="id">
      <view class="photo-card fade-in" style="animation-delay: {{index * 0.1}}s;" bindtap="selectSize" data-size="{{item}}">
        <view class="photo-icon">
          <view class="photo-placeholder bg-gradient-{{item.category || 'primary'}}">
            <text class="photo-dims">{{item.width}}×{{item.height}}</text>
          </view>
        </view>
        <view class="photo-info">
          <text class="photo-name">{{item.name}}</text>
          <text class="photo-desc">{{item.desc}}</text>
          <view class="photo-usage">
            <block wx:for="{{item.usage}}" wx:for-item="usage" wx:for-index="idx" wx:key="idx">
              <text class="usage-tag">{{usage}}</text>
            </block>
          </view>
        </view>
        <view class="photo-arrow">
          <view class="arrow-circle">
            <text class="arrow-icon">→</text>
          </view>
        </view>
      </view>
    </block>
  </view>

  <!-- 底部说明 -->
  <view class="footer">
    <view class="footer-badges">
      <view class="footer-badge">
        <text class="badge-emoji">⚡</text>
        <text class="badge-label">智能抠图</text>
      </view>
      <view class="footer-badge">
        <text class="badge-emoji">🎨</text>
        <text class="badge-label">多色背景</text>
      </view>
      <view class="footer-badge">
        <text class="badge-emoji">📐</text>
        <text class="badge-label">精准裁切</text>
      </view>
    </view>
  </view>
</view>
