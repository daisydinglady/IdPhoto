/* pages/preview/preview.wxss */
.tabs {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 30rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab.active {
  background: #4A90E2;
  color: #fff;
  font-weight: bold;
}

/* 预览区域 */
.preview-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 800rpx;
}

.preview-image {
  width: 100%;
  max-height: 1000rpx;
}

/* 提示信息 */
.tips {
  text-align: center;
  padding: 30rpx;
}

.tips-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 16rpx;
}

.tips-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 保存区域 */
.save-section {
  margin: 30rpx 0;
}

.save-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.download-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
}

/* 其他操作 */
.extra-actions {
  margin-top: 20rpx;
}

.extra-actions .btn {
  width: 100%;
}
