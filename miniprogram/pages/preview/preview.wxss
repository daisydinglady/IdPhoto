/* pages/preview/preview.wxss */
.tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.tab::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.tab.active::before {
  opacity: 1;
}

.tab text {
  position: relative;
  z-index: 1;
  font-size: 26rpx;
  font-weight: 600;
  color: #8B94A6;
  transition: color 0.3s;
}

.tab.active text {
  color: #fff;
}

.tab:active {
  transform: scale(0.95);
}

/* 预览区域 */
.preview-section {
  background: #fff;
  border-radius: 32rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 800rpx;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.12);
  border: 4rpx solid transparent;
  background-clip: padding-box;
  position: relative;
  overflow: hidden;
}

.preview-section::before {
  content: '';
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 32rpx;
  z-index: -1;
}

.preview-image {
  width: 100%;
  max-height: 1000rpx;
  border-radius: 20rpx;
}

/* 提示信息 */
.tips {
  text-align: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #FFF5F5 0%, #FFF 100%);
  border: 2rpx solid #FED7D7;
  border-radius: 24rpx;
}

.tips-title {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #C53030;
  margin-bottom: 12rpx;
}

.tips-text {
  display: block;
  font-size: 26rpx;
  color: #4A5568;
  line-height: 1.6;
}

/* 保存区域 */
.save-section {
  margin: 30rpx 0;
}

.save-btn,
.download-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.save-btn {
  height: 108rpx;
  line-height: 108rpx;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.download-btn {
  height: 96rpx;
  line-height: 96rpx;
}

/* 其他操作 */
.extra-actions {
  margin-top: 20rpx;
}

.extra-actions .btn {
  width: 100%;
}
