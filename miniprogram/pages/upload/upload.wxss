/* pages/upload/upload.wxss */
.type-info {
  text-align: center;
  padding: 40rpx 32rpx;
  background: linear-gradient(135deg, #F0F4FF 0%, #FFFFFF 100%);
}

.type-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.type-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

.type-badge-text {
  font-size: 22rpx;
  color: #fff;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.type-title {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.type-name {
  font-size: 52rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: 2rpx;
}

.type-size {
  font-size: 28rpx;
  color: #667eea;
  background: #E0E9FF;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 600;
  border: 2rpx solid #C7D2FE;
}

.type-desc {
  font-size: 26rpx;
  color: #8B94A6;
  margin-bottom: 24rpx;
}

.type-tips {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  flex-wrap: wrap;
}

.tip-item {
  font-size: 22rpx;
  color: #8B94A6;
  background: #fff;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  border: 1rpx solid #E0E6ED;
}

/* 上传区域 */
.upload-section {
  margin: 40rpx 0;
}

.upload-container {
  width: 100%;
  height: 800rpx;
  background: #fff;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  position: relative;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.12);
  border: 4rpx solid transparent;
  background-clip: padding-box;
  transition: all 0.3s;
}

.upload-container::before {
  content: '';
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 32rpx;
  z-index: -1;
}

.upload-container:active {
  transform: scale(0.98);
}

.preview-image {
  width: 100%;
  height: 100%;
}

.change-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 0%, transparent 100%);
  padding: 60rpx 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.change-icon {
  font-size: 48rpx;
}

.change-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.upload-circle {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #F0F4FF 0%, #E0E9FF 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx dashed #C7D2FE;
  animation: pulse 2s ease-in-out infinite;
}

.upload-icon {
  font-size: 72rpx;
  filter: grayscale(0.2);
}

.upload-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 4rpx;
}

.upload-hint {
  font-size: 26rpx;
  color: #8B94A6;
}

.upload-features {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
}

.feature-tag {
  font-size: 22rpx;
  color: #667eea;
  background: #E0E9FF;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 600;
  border: 1rpx solid #C7D2FE;
}

/* 拍照按钮 */
.camera-section {
  margin: 32rpx 0;
}

.camera-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.btn-icon {
  font-size: 36rpx;
}

/* 要求列表 */
.requirements {
  margin: 40rpx 0;
}

.req-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #2D3748;
  margin-bottom: 24rpx;
  text-align: center;
}

.req-list {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.req-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
  border-radius: 16rpx;
  border: 1rpx solid #E2E8F0;
}

.req-icon {
  font-size: 36rpx;
  flex-shrink: 0;
}

.req-text {
  font-size: 24rpx;
  color: #4A5568;
  line-height: 1.5;
  font-weight: 500;
}

/* 操作按钮 */
.action-section {
  margin: 48rpx 0 32rpx;
}

.generate-btn {
  width: 100%;
  height: 108rpx;
  line-height: 108rpx;
  font-size: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.generate-btn.disabled {
  background: #E2E8F0 !important;
  box-shadow: none !important;
  color: #A0AEC0 !important;
}
